<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/icon_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_width="52dp"
        android:background="@drawable/background_rounded_corners_black_8dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="24dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center"
            android:layout_height="24dp"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/income"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/icon_card"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="@color/black_32"
        app:layout_constraintStart_toStartOf="@id/icon_card"
        app:layout_constraintEnd_toEndOf="@id/icon_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>